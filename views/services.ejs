	<main>

		<div class="page-heading text-center">
			<div class="container">
				<h2>OUR SERVICES</h2>
			</div>
		</div>
		<div class="container courses-browse popular">
			<form>
				<div class="row toolbar">
					<div class="col-sm-6 col-xs-12 text-keywords">
						<select id="select" class="keywords ui-selectmenu-text" type="text">
							<option value="">Choose a category</option>
							<option value="IT Development"> IT Development</option>
							<option value="Business">Business</option>
							<option value="School">School</option>
							<option value="Agriculture">Agriculture</option>
							<option value="Food & Dishes">Food & Dishes</option>
							<option value="Events">Events</option>
							<option value="Medicine">Medicine</option>
						</select>
					</div>
					<div class="col-sm-6 col-xs-12 search-button">
						<button class="search-teachers" id="search">SEARCH</button>
					</div>
				</div>
			</form>
			<div class="row tutorials" id="cards">

			</div>
		</div>


	</main>

	<script src="assets/libs/jquery/jquery.js"></script>

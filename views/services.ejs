	<!-- Bulkit js -->
	<script src="assets/js/landingv1.js"></script>
	<script src="assets/js/auth.js"></script>
	<script src="assets/js/main.js"></script>

	<script>
		function addServices(services) {
			for (var i = services.length - 1; i > -1; i--) {
				var newService = $(`
		<div class="col-md-4 col-sm-4">
		<div class="tutorial">
			<div class="tutorial-details">
				<h6>${services[i].company}</h6>
				<p><span class="lessons">${services[i].user}</span><span class="duration"><i class="zmdi zmdi-time"></i>3:15h</span></p>
				<p class="abs">${services[i].service}</p>
				<a href="/service/${services[i].company}" class="greybutton">VIEW SERVICE</a>
			</div>
		</div>
	</div>
		`)
				$('#cards').append(newService);
			}
		}
		$(document).ready(function () {
			$.get('/api/service/services').then(function (services) {
		 		addServices(services);
			});
		});
		$('#search').click(function (e) {
			e.preventDefault();
			var category = $('#select').val();
			$.post('/api/service/category', { category: category }).then(function (services) {
				$('#cards').children().remove();
				addServices(services);
			});
		});
	</script>



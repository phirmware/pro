<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="./assets/materialize/css/materialize.min.css"  media="screen,projection"/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <style>
          nav{
            background-color: #00b289;
          }
          .icon-container{
              display: flex;
              flex-wrap: wrap;
              flex-direction: row;
              justify-content: space-around;
          }
          #small-nav{
            background-color: #EFF4F7;
			background-image: linear-gradient(141deg, #d0e0ec 0%, #f5f7fa 71%, #fff 100%);
          }
          @media(min-width:1000px){
              #small-nav{
                  display: none;
              }
          }
    </style>
  </head>

  <body>

        <nav>
                <div class="nav-wrapper">
                  <a  class="brand-logo">Dashboard</a>
                  <ul class="right hide-on-med-and-down">
                        <li><a href="/"><i class="material-icons left">home</i>Home</a></li>
                    <li><a><%= user[0].email %></a></li>
                    <li><a href="/logout"><i class="material-icons right">account_circle</i>Logout</a></li>
                  </ul>
                </div>
              </nav>


<div class="row" id="small-nav">
<div class="icon-container">
        <a href="/"><i class="material-icons">home</i>Home</a>
        <a><i class="material-icons">account_circle</i><%= user[0].email %></a>
        <a style="color: red" href="/logout"><i style="color: red" class="material-icons">account_circle</i>Logout</a>
</div>
</div>


              <div class="row">
     <h3>Registered companies</h3>

                <% for(var i = 0;i < user.length;i++){ %>

                    <div class="col s12 m6">
                            <div class="card blue-grey darken-1">
                              <div class="card-content white-text">
                                <span class="card-title"><%= user[i].company %></span>
                                <p><%= user[i].service %></p>
                              </div>
                              <div class="card-action">
                                <a href="/service/<%= user[i].company %>">Go to Page</a>
                                <a href="/edit-service/<%= user[i].company %>">Edit</a>
                              </div>
                            </div>
                        </div>
                    <% } %>

                   
            </div> 

    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="./assets/materialize/js/materialize.min.js"></script>
    <script src="./assets/libs/jquery/jquery.js"></script>
    <script>
      $(document).ready(function(){
       
      })
    </script>
  </body>
</html>